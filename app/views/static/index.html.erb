</div>

<table id="user-buttons"><tr>

	<td>
		<%= link_to "<button class=\"btn btn-light\">Academic Calendar</button>".html_safe, "http://guide.berkeley.edu/academic-calendar/" %>
	</td>

	<% if !@current_user.nil? && @current_user.auth %>

		<td>
			<%= link_to "<button class=\"btn btn-light\">View My Schedules</button>".html_safe, user_schedules_path(@current_user) %>
		</td>
		
		<td>
			<%= link_to "<button class=\"btn btn-light\">View Schedule Overview</button>".html_safe, schedules_overview_path %>
		</td>

		<% if @current_user.admin %>

			<td>
				<%= link_to "<button class=\"btn btn-light\">View Users</button>".html_safe, users_path %>
			</td>

		<% end %>

	<% end %>

</tr></table>

