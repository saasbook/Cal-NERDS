<p id="notice"><%= notice %></p>

<h1>Listing Schedules for <%= @user.name %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.user_id %></td>
        <td><%= link_to 'Show', user_schedule_path(id: schedule.id) %></td>
        <td><%= link_to 'Edit', edit_user_schedule_path(id: schedule.id) %></td>
        <td><%= link_to 'Destroy', user_schedule_path(id: schedule.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_user_schedule_path %>
