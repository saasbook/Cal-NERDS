<h1>Editing Schedule</h1>

<%= render 'form' %>

<script type="text/javascript">
	
	<% for day in ["mon", "tue", "wed", "thu", "fri"] %>
    <% for time in @times_hash[day.to_sym] %>
      $("#<%= day %>-<%= time %>").css("background", "#3B7EA1")
      $("#" + $("#<%= day %>-<%= time %>").attr("id") + "-cb").prop("checked", true);
    <% end %>
  <% end %>

</script>

<%= link_to 'Show', user_schedule_path %> |
<%= link_to 'Back', user_schedules_path %>
